<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <!-- Light/Day Mode theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor1">#FCFCFC</item>
        <item name="toolbar">#4E5DB3</item>
        <item name="textcolor">#000000</item>
        <item name="tintcolor">#4E5DB3</item>
        <item name="buttoncolor">#2196F3</item>
        <item name="bottomnavibackground">#FFFFFF</item>
        <item name="floatbutton">#4E5DB3</item>
        <item name="modeselect">#000000</item>
        <item name="cardColor">#00BCD4</item>
    </style>


    <!-- Night / dark  Mode theme. -->
    <style name="darktheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor1">#303030</item>
        <item name="toolbar">#424242</item>
        <item name="textcolor">#ffffff</item>
        <item name="tintcolor">#ffffff</item>
        <item name="buttoncolor">#2196F3</item>
        <item name="bottomnavibackground">#212121</item>
        <item name="floatbutton">#1A1A1B</item>
        <item name="modeselect">#FCFCFC</item>
        <item name="cardColor">#3D4155</item>
    </style>

    <style name="dialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="searchViewStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">?attr/modeselect</item>
    </style>

    <style name="layoutTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">?attr/backgroundcolor1</item>
    </style>
</resources>